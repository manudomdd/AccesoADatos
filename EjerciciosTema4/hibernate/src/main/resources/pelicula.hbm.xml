<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
    <class name="com.example.hibernate.entity.Pelicula" table="pelicula">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="titulo" column="titulo" type="string" length="100"/>
        <property name="genero" column="genero" type="string" length="50"/>
        <property name="estreno" column="estreno" type="integer"/>
    </class>
</hibernate-mapping>